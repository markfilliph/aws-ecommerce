# Environment Configuration
ENVIRONMENT=dev
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
DOMAIN_NAME=ecommerce.example.com
IMAGE_TAG=latest

# Application Settings
NODE_ENV=production
PORT=3000

# Service URLs
BACKEND_URL=http://backend
FRONTEND_URL=https://ecommerce.example.com

# Resource Settings
BACKEND_MIN_REPLICAS=2
BACKEND_MAX_REPLICAS=4
FRONTEND_MIN_REPLICAS=2
FRONTEND_MAX_REPLICAS=4

# Monitoring Settings
ENABLE_METRICS=true
PROMETHEUS_SCRAPE=true

# Database Configuration (Replace with actual values)
DB_USER=ecommerceadmin
DB_PASSWORD=your-secure-password
DB_HOST=your-rds-endpoint
DB_NAME=ecommerce

# Redis Configuration (Replace with actual values)
REDIS_HOST=your-redis-endpoint

# JWT Configuration (Replace with actual values)
JWT_SECRET=your-secure-jwt-secret

# IAM Role ARNs (Replace with actual values)
BACKEND_ROLE_ARN=arn:aws:iam::123456789012:role/ecommerce-backend-role
FRONTEND_ROLE_ARN=arn:aws:iam::123456789012:role/ecommerce-frontend-role
